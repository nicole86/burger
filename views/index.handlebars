<h1>Burgers!</h1>

<h2>What's your favorite burger??</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR IT!!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger Graveyard!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
      
      <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
        <button type="submit">Never eat this burger again!</button>
        </form>
      </li>

    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="ca">Burger type:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit">Add burger</button>
</form>
